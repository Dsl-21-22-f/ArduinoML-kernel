application stateBasedAlarm

# Declaring bricks
sensor button: 8
actuator led: 11
actuator buzzer: 12

# Declaring states
onLed {
    led <= HIGH
    button is PUSHED OR before 1000 ms => offLed
}

offLed {
    led <= LOW
    buzzer <= LOW
    button is PUSHED OR after 1000 ms => onBuzz
}

onBuzz {
    buzzer <= HIGH
    button is PUSHED OR after 1000 ms => off
}

-> off {
    led <= LOW
    buzzer<=LOW
    button is PUSHED OR after 1000 ms => onLed
}